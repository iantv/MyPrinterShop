<!DOCTYPE HTML>
<html>
<head>
<title>{{ page_title }}</title>
<meta http-equiv="content-type" content="text/html; charset=UTF-8" />
{% stylesheets 
	'bundles/app/css/jqGrid/css/ui.jqgrid.css'
	'bundles/app/css/jquery-ui/themes/blitzer/jquery-ui.css'
	'bundles/app/css/main_styles.css'
 	filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{{ db|raw }}
{% javascripts
	'@jquery_and_jqGrid'
	'@jquery_cookie' %}
	<script src="{{ asset_url }}"></script>
{% endjavascripts %}
</head>
<body>
	<img src=""></img>
	<ul class="entrance">
		{% if is_granted('ROLE_ADMIN') %}
			<li><a href="/admin">Администрирование</a></li>
			<li><a href="/logout">Выйти</a></li>
		{% elseif is_granted('ROLE_USER')%}
			<li><a href="/personalx">Личный кабинет</a></li>
			<li><a href="/logout">Выйти</a></li>
		{% else %}
			<li><a href="/register">Регистрация</a></li>
			<li><a href="/login">Войти</a></li>
		{% endif %}
	</ul>
	<div id="header">
		<div class="site_name_block">
			<a href="/" class="site_name">{{ site_name }}</a><br>
			<a href="/" class="site_phrase">Всё для принтера</a>
		</div>
		<div class="search_line"></div>
		<button class="bucket" value="0"><a href="/bucket">
			{% image '@AppBundle/Resources/public/images/bucket.png' %}
		    	<img src="{{ asset_url }}" class="bucket_icon"/>
			{% endimage %}
			<div class="bucket_labels">
				<span>Товаров</span><br>
				<span>Сумма(руб)</span>
			</div>
			<div class="bucket_values">
				<span id="bucket_count">0</span><br>
				<span id="bucket_sum">0</span>
			</div>
		</a></button>
	</div>
	<div id="content">

    </div>
</body>
</html>
